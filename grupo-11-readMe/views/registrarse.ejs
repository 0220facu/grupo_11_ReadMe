<html lang="en">
    <%- include('partials/header') %>
     <main>
        <% if(typeof errors !='undefined') { %>
            <% for (error of errors) { %>
                <p class="error"><%= error.msg %> </p>
            <% } %>
            <% } %>
            <ul id="errors" class="error"></ul>
        <form action="/users/register" id="form" method="POST" enctype="multipart/form-data">
        <div class="contenedorflex">
            
            <article>
                <label class="destacadosincentrar" for="name">Nombre</label>
                <input type="text" class="contenedordetexto" name="name" id="name" placeholder="Nombre y apellido">
            </article>
            
            <article>
                <label class="destacadosincentrar" for="birth_date">Fecha de nacimiento</label>
                <input type="date" name="birth_date" class="contenedordetexto" id="birth_date">
            </article>
            <article>
                <label class="destacadosincentrar" for="adress"> dirección</label>
                <input type="text" class="contenedordetexto" name="adress" id="adress" placeholder="Domicilio">
            </article>
            <article>
                <label class="destacadosincentrar" for="email">e-mail</label>
                <input type="email" name="email" id="email" class="contenedordetexto" placeholder="E-mail">
            </article>
            <article>
                <label class="destacadosincentrar" for="email2">confirmar e-mail</label>
                <input class="contenedordetexto" type="email" name="email2" id="email2" placeholder="Confirma tu e-mail">
            </article>
            <article>
                <label class="destacadosincentrar" for="username">nombre de usuario</label>
                <input type="text" name="username" class="contenedordetexto" id="username" placeholder="Nombre de usuario">
            </article>
            <articlE>
                <label class="destacadosincentrar" for="picture">Elegí tu foto de usuario</label>
                <input type="file" name="image" id="picture" class="contenedordetexto" value="Seleccionar archivo">
            </article>
            <article>
                <label class="destacadosincentrar" for="password">Elegí tu contraseña</label>
                <input type="password" name="password" class="contenedordetexto" id="password_1" placeholder="Elegí tu contraseña">
            </article>
            <article>   <label class="destacadosincentrar" for="password-2">Confirma tu contraseña</label>
                <input type="password" name="password_2" id="password_2" class="contenedordetexto" placeholder="Confirma tu contraseña">
            </article>
            <section>
                <h2 class="destacadosincentrar">Intereses</h2>
                <% for(category of categories){ %> 
                <input type="checkbox" name="categories" value="<%= category.id %>" ><%= category.name %> 
               <% } %> 
           
            </section>
            <article class="contenedorbotones">
                <button class="boton3" id="boton" type="submit">Enviar</button>
            </article>
              </form>     
        </div>
    <script src="/javascripts/register_validation.js"></script>
    </main>
    <footer></footer>
</body>
</html>